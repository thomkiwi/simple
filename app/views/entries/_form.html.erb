<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div style="color: red">
      <h2>There was an error! ðŸ˜ž </h2>

      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.text_field :entry, placeholder: "snippet > bundle install" %>
  </div>

  <div>

    <%= form.text_field :description, placeholder: "description > Install all your gems and makes sure your project is up to date"%>
  </div>

  <div>
    <%= form.number_field :user_id, id: :friend_user_id, value: current_user.id, type: :hidden %>
  </div>
  
  <br>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
